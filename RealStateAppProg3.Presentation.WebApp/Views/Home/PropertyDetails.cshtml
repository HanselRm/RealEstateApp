@model RealStateAppProg3.Core.Application.ViewModels.Propertys.PropertyViewModelDetail

@{
    ViewData["Title"] = "Detalles de la propiedad";
}
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

</head>
<div class="container my-5">
    <div class="row">
        <div class="col-md-8">
            @await Html.PartialAsync("_SliderPartial", Model)
        </div>
        <div class="col-md-4">
            <h2 class="mb-3">@Model.TypeProperty</h2>
            <p><strong>Código:</strong> @Model.Code</p>
            <p><strong>Tipo de propiedad:</strong> @Model.TypeProperty</p>
            <p><strong>Tipo de Venta:</strong> @Model.TypeSale</p>
            <p><strong>Costo:</strong> @Model.Value.ToString("C")</p>
            <p><strong>Habitaciones:</strong> @Model.NumberRooms</p>
            <p><strong>Baños:</strong> @Model.Bathrooms</p>
            <p><strong>Tamaño:</strong> @Model.SizeInMeters m²</p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-8">
            <h3>Descripción</h3>
            <p>@Model.Description</p>

            <h3 class="mt-4">Mejoras</h3>
            <ul>
                @foreach (var upgrade in Model.Upgrades)
                {
                    <li>@upgrade</li>
                }
            </ul>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Agente Inmobiliario</h5>
                    <div class="text-center mb-3">
                        <img src="@Model.fotoAgente" alt="Foto del agente" class="img-fluid rounded-circle" style="max-width: 150px;">
                    </div>
                    <p class="card-text"><strong>Nombre:</strong> @Model.NameAgent</p>
                    <p class="card-text"><strong>Celular:</strong> @Model.PhoneNumber</p>
                    <p class="card-text"><strong>Correo:</strong> @Model.EmailAgente</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" integrity="sha512-..." crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />
    <style>
        .carousel-item img {
            max-height: 500px;
            object-fit: cover;
        }
    </style>
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js" integrity="sha512-..." crossorigin="anonymous"></script>
}