@using RealStateAppProg3.Core.Application.ViewModels.TypeProperty
@model List<TypePropertyViewModel>

<div class="container mt-5">
    <div class="row mb-3">

        <div class="col-3 offset-9">
            <a asp-controller="TypeProperty" asp-action="Save" class="btn btn-danger">Agregar un tipo de propiedad</a>
        </div>

        <div class="col-12">
            <h2 class="text-center mb-4">Tipos de propiedades</h2>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if (@Model != null)
                {
                    @foreach (var beneficiary in @Model)
                    {
                        <tr>
                            <td>@beneficiary.Name</td>
                            <td>@beneficiary.Description</td>
                            <td>
                                <a asp-controller="TypeProperty" asp-action="Update" asp-route-Id="@beneficiary.Id">
                                    Actualizar
                                </a>
                            </td>
                            <td>
                                <a asp-controller="TypeProperty" asp-action="Remove" asp-route-Id="@beneficiary.Id">
                                    Remover
                                </a>
                            </td>
                        </tr>

                    }
                }
            </tbody>
        </table>

    </div>
</div>
