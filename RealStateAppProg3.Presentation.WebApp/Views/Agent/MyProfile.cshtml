﻿﻿@using RealStateAppProg3.Core.Application.ViewModels;
@using RealStateAppProg3.Core.Application.ViewModels.Users;
@model SaveUserViewModel;
@{

    ViewData["Title"] = "My Profile";
}
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <form method="post" enctype="multipart/form-data" asp-controller="Agent" asp-action="MyProfile">

                                    <h2 class="fw-bold mb-2 text-uppercase">Registro</h2>
                                    <p class="text-white-50 mb-5">Llena el siguiente registro!</p>

                                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                    @{
                                        bool error = Model.HasError ?? false;
                                    }
                                    @if (error)
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <p>@Model.Error</p>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    }
                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Name" type="text" class="form-control form-control-lg" />
                                        <label asp-for="Name" class="form-label">Nombre</label>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="LastName" type="text" class="form-control form-control-lg" />
                                        <label asp-for="LastName" class="form-label">Apellido</label>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="PhoneNumber" type="tel" class="form-control form-control-lg" />
                                        <label asp-for="PhoneNumber" class="form-label">Numero de telefono</label>
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="file" type="file" class="form-control form-control-lg" />
                                        <label asp-for="file" class="form-label">Foto de perfil</label>
                                        <span asp-validation-for="file" class="text-danger"></span>
                                    </div>

                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="IsActive" value="@Model.IsActive" />
                                    <input type="hidden" asp-for="Email" value="@Model.Email" />
                                    <input type="hidden" asp-for="TypeUser" value="@Model.TypeUser" />
                                    <input type="hidden" asp-for="IsConfirm" value="@Model.IsConfirm" />
                                    <input type="hidden" asp-for="Username" value="@Model.Username" />
                                    <input type="hidden" asp-for="Identification" value="@Model.Identification" />

                                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Actualizar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>