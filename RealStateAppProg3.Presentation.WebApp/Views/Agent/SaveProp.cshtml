@using RealStateAppProg3.Core.Application.ViewModels.Propertys
﻿@using RealStateAppProg3.Core.Application.Dtos.Account
@using RealStateAppProg3.Core.Application.Helpers;
@model SavePropertyViewModel;
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Guardar propiedad";
    var user = HttpContextAccessor.HttpContext.Session.Get<AuthenticationResponse>("user");
    bool isEditing = Model.Code == null ? false : true;
}

@if (ViewBag.TypeSales.Count == 0 || ViewBag.Count == 0 || ViewBag.Upgrades.Count == 0)
{
    <h2>No hay tipos de propiedad, mejoras o ventas agregadas.</h2>
}
else
{
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <form method="post" enctype="multipart/form-data" asp-controller="Agent" asp-action="@(isEditing?"Update":"SaveProp")">

                                    <h2 class="fw-bold mb-2 text-uppercase">Agregar Propiedades</h2>

                                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                    @if (ViewBag.Error != null)
                                    {
                                        <span class="text-danger">@ViewBag.Error</span>
                                    }

                                    <div class="form-outline form-white mb-5">
                                        <label asp-for="IdTypeProperty" class="form-select mb-2">Tipo de propiedad:</label>
                                        <select asp-for="IdTypeProperty" class="form-select">
                                            @foreach (var item in ViewBag.TypeProperties)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                            <span asp-validation-for="IdTypeProperty" class="text-danger"></span>

                                        </select>

                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <label asp-for="IdTypeSale" class="form-label">Tipo de venta:</label>
                                        <select asp-for="IdTypeSale" class="form-select">
                                            @foreach (var item in ViewBag.TypeSales)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                            <span asp-validation-for="IdTypeSale" class="text-danger"></span>

                                        </select>

                                    </div>
                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Value" type="text" class="form-control form-control-lg" />
                                        <label asp-for="Value" class="form-label">Valor de la propiedad:</label>
                                        <span asp-validation-for="Value" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <label asp-for="Description" class="form-label">Descripcion:</label>
                                        <input asp-for="Description" class="form-control form-control-lg" />
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="SizeInMeters" type="text" class="form-control form-control-lg" />
                                        <label asp-for="SizeInMeters" class="form-label">Tamaño en metros:</label>
                                        <span asp-validation-for="SizeInMeters" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="NumberRooms" type="text" class="form-control form-control-lg" />
                                        <label asp-for="NumberRooms" class="form-label">Numero de habitaciones:</label>
                                        <span asp-validation-for="NumberRooms" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Bathrooms" type="text" class="form-control form-control-lg" />
                                        <label asp-for="Bathrooms" class="form-label">Numero de baños:</label>
                                        <span asp-validation-for="Bathrooms" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <label asp-for="UpgradesId" class="form-label">Mejoras:</label>
                                        <select asp-for="UpgradesId" class="form-select" multiple>
                                            @foreach (var item in ViewBag.Upgrades)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                    
                                    
                                    <div class="form-outline form-white mb-4">
                                        <label asp-for="Img1" class="form-label">Imagen principal:</label>
                                        <input asp-for="Img1" type="file" required />
                                        <span asp-validation-for="Img1" class="text-danger"></span>

                                        <label asp-for="Img2" class="form-label">Imagen 2(opcional):</label>
                                        <input asp-for="Img2" type="file" />

                                        <label asp-for="Img3" class="form-label">Imagen 3(opcional):</label>
                                        <input asp-for="Img3" type="file" />

                                        <label asp-for="Img4" class="form-label">Imagen 4(opcional):</label>
                                        <input asp-for="Img4" type="file" />

                                    </div>


                                    <input type="hidden" asp-for="Code" value="@Model.Code" />
                                    <input type="hidden" asp-for="IdUser" value="@user.Id"/>

                                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Guardar</button>
                                </form>
                            </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
